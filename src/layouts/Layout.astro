---
import '../styles/global.css'
import LucideIcon from '../components/lucide-icons.astro'
import { Github, Linkedin, Mail } from 'lucide'
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon_light.svg" />
    <meta name="description" content="Malpais DEV - Desarrollo de software y consulting" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Malpais DEV</title>
    <style>
      body {
        background: linear-gradient(to bottom, black, #3d3d3d);
        background-color: #3d3d3d;
        font-family: 'Raleway', 'system-ui', sans-serif;
      }
    </style>
  </head>
  <body class="m-0 flex w-full justify-center bg-fixed text-gray-200">
    <div class="max-w-6xl">
      <slot />
    </div>

    <footer class="flex w-full flex-col items-center justify-center bg-black px-5 py-5 font-extralight md:py-10">
      <div class="mb-4 flex items-center justify-center gap-4">
        <LucideIcon icon={Linkedin} width="16" stroke-width="2" class="hover:text-malpais" />
        <LucideIcon icon={Github} width="16" stroke-width="2" class="hover:text-malpais" />
        <LucideIcon icon={Mail} width="16" stroke-width="2" class="hover:text-malpais" />
      </div>
      <div class="flex w-full max-w-6xl items-center justify-between gap-2 text-xs md:text-sm">
        <div>Copyright Â© 2024</div>
        <div>malpais.dev</div>
      </div>
    </footer>
  </body>
</html>
