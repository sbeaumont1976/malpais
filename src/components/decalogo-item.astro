---
const { title } = Astro.props
---

<div class="decalogo-text border border-gray-500 bg-black/20 p-5 shadow-md shadow-malpais/30">
  <h1 class="flex items-start justify-start gap-2 pb-4 font-semibold">
    <div class="flex-none py-[6px]">
      <div class="pulser"></div>
    </div>
    {title}
  </h1>
  <div class="font-extralight">
    <slot />
  </div>
</div>

<style>
  .pulser {
    width: 15px;
    height: 15px;
    background: #ff6f00;
    border-radius: 50%;
    position: relative;
  }
  .pulser::after {
    content: '';
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    border-radius: 50%;
    background: rgba(255, 111, 0, 0.6);
    z-index: -1;
    animation: pulse 1s ease-in-out infinite 1s alternate;
  }
  @keyframes pulse {
    0% {
      opacity: 0;
    }
    100% {
      transform: scale(1.5);
      border: 1px solid #ff6f00;
      opacity: 0.6;
    }
  }
  .decalogo-text {
    border-radius: 5px;
    animation: reveal-decalogo auto both;
    animation-timeline: view();
    animation-range: entry 10% cover 20%;
  }
  @keyframes reveal-decalogo {
    from {
      opacity: 0;
      translate: 0 100px;
      scale: 0.5;
    }
    to {
      opacity: 1;
      translate: 0 0;
      scale: 1;
    }
  }
</style>
